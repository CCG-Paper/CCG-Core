{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "types/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
